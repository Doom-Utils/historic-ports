all:	 $(O)/dosdoom

clean:
	rm -f *.o *~ *.flc
	rm -f obj/*

$(O)/dosdoom:	$(OBJS) $(O)/i_main.o
	$(CC) $(CFLAGS) $(LDFLAGS) $(OBJS) $(O)/i_main.o \
	-o $(O)/dosdoom.exe $(LIBS)

$(O)/%.o:	%.c
	$(CC) $(CFLAGS) -c $< -o $@

