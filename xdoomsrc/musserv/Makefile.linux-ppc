#
# Makefile for musserver 1.4 for Linux PPC
#

CC	= gcc
CFLAGS	= -Wall -O2 -DBIGEND
LDFLAGS	= -s
#LDFLAGS	= -static

#############################################
# Nothing below this line should be changed #
#############################################

O=linux-ppc

all: ${O}/musserver

${O}/musserver: \
	${O}/musserver.o \
	${O}/readwad.o \
	${O}/playmus.o \
	${O}/sequencer.o
	${CC} ${CFLAGS} ${LDFLAGS} \
	${O}/musserver.o \
	${O}/readwad.o \
	${O}/playmus.o \
	${O}/sequencer.o -o ${O}/musserver

clean:
	rm -f ${O}/*

${O}/%.o: %.c
	${CC} ${CFLAGS} -c $< -o $@
