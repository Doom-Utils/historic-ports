$(O)/xdoom:	$(OBJS) $(O)/i_video_xshm.o
	$(CC) $(CFLAGS) $(XLIBS) $(OBJS) $(O)/i_video_xshm.o \
	-o $(O)/xdoom -lXext -lX11 -lm

$(O)/sxdoom:	$(OBJS) $(O)/i_video_vgl.o
	$(CC) $(CFLAGS) $(OBJS) $(O)/i_video_vgl.o \
	-o $(O)/sxdoom -lvgl -lm

all:	$(O)/xdoom $(O)/sxdoom

clean:
	rm -f $(O)/*

$(O)/%.o:	%.c
	$(CC) $(CFLAGS) -c $< -o $@

$(O)/%.o:	%.s
	/usr/bin/as -o $@ $<

