$(O)/xdoom:	$(OBJS) $(O)/i_video_xshm.o
	$(CC) $(CFLAGS) $(XLIBS) $(OBJS) $(O)/i_video_xshm.o \
	-o $(O)/xdoom -lXext -lX11 -lm

$(O)/sxdoom:	$(OBJS) $(O)/i_video_vga.o
	$(CC) $(CFLAGS) $(OBJS) $(O)/i_video_vga.o \
	-o $(O)/sxdoom -lvga -lm

all:	 $(O)/xdoom

clean:
	rm -f $(O)/*

$(O)/%.o:	%.c
	$(CC) $(CFLAGS) -c $< -o $@

$(O)/%.o:	%.s
	as $< -o $@

